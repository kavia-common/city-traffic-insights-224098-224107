# Backend environment example

# Required for local dev
PORT=3001
REACT_APP_FRONTEND_URL=http://localhost:3000

# Optional MongoDB persistence (if unset, local JSON file store is used)
# MONGO_URI=mongodb://localhost:27017/traffic

# Optional real-time live data via TomTom
# TOMTOM_API_KEY=your_tomtom_api_key

# Other options
REACT_APP_TRUST_PROXY=true
REACT_APP_LOG_LEVEL=debug
REACT_APP_HEALTHCHECK_PATH=/api/health

# Informational
# REACT_APP_API_BASE=
# REACT_APP_BACKEND_URL=
# REACT_APP_WS_URL=
# REACT_APP_FEATURE_FLAGS=
# REACT_APP_EXPERIMENTS_ENABLED=false
