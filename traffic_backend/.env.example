# Backend environment sample
# Port and logging
PORT=3001
LOG_LEVEL=debug

# CORS / URLs (used by this containerized environment)
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_API_BASE=http://localhost:3001

# MongoDB connection string (required for persistence)
# Example (MongoDB Atlas):
#   mongodb+srv://<USER>:<PASSWORD>@<CLUSTER>.mongodb.net/traffic?retryWrites=true&w=majority
# Example (local):
#   mongodb://localhost:27017/traffic
MONGO_URI=

# Feature flags (optional)
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
